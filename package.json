{
  "name": "fnordcredit",
  "version": "2.0.0",
  "author": "silsha <hallo@silsha.me>",
  "description": "SAP easy credit system",
  "main": "lib/server.js",
  "engines": {
    "node": ">= 7.6"
  },
  "scripts": {
    "build": "babel src --out-dir lib --copy-files",
    "watch": "babel src --out-dir lib --watch --copy-files --source-maps",
    "dev": "nodemon --watch lib --exec 'node lib/server.js'",
    "lint": "eslint src --ext .jsx --ext .js",
    "start": "node lib/server.js",
    "test": "jest && npm run build && npm run start -- --test",
    "travis": "flow && npm run newDatabase && npm test",
    "newDatabase": "knex migrate:rollback && knex migrate:latest",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.jsx": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/testInit.js"
    ],
    "roots": [
      "src"
    ]
  },
  "dependencies": {
    "bookshelf": "^0.15.1",
    "engine.io": "^3.1.0",
    "fnordcredit-frontend": "2.1.4",
    "knex": "^0.17.6",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "koa-static": "^5.0.0",
    "password-hash": "1.2.2",
    "primus": "^7.0.2",
    "primus-emit": "^1.0.0",
    "sqlite3": "^4.0.0",
    "uuid": "^3.1.0",
    "winston": "^3.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "babel-plugin-module-resolver": "^3.2.0",
    "dotenv": "^8.0.0",
    "eslint": "^6.0.0",
    "eslint-plugin-flowtype": "^3.10.5",
    "eslint-plugin-header": "^2.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "flow-bin": "^0.101.1",
    "flow-typed": "^2.1.5",
    "husky": "^2.0.0",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fnordcredit/fnordcredit.git"
  },
  "bugs": {
    "url": "https://github.com/fnordcredit/fnordcredit/issues"
  }
}
