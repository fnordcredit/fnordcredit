// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl         = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING") // used for migrations
}

model User {
  id           Int           @id @default(autoincrement())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  name         String        @unique
  debtLimit    Int           @default(0)
  authMethods  AuthMethod[]
  email        String?
  credit       Int           @default(0)
  avatar       String?
  transactions Transaction[] @relation("TransactionUser")
  transfers    Transaction[] @relation("TransactionTransferUser")
}

enum AuthType {
  Pincode
  Password
  RFID
  Barcode
}

model AuthMethod {
  id             Int         @id @default(autoincrement())
  authType       AuthType
  secret         String
  // user omitted if second factor only
  user           User?       @relation(fields: [userId], references: [id])
  userId         Int?
  secondFactor   AuthMethod? @relation("SecondFactor", fields: [secondFactorId], references: [id])
  secondFactorId Int?        @unique
  firstFactor    AuthMethod? @relation("SecondFactor")
}

model ProductCategory {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model Product {
  id           Int             @id @default(autoincrement())
  name         String
  price        Int
  category     ProductCategory @relation(fields: [categoryId], references: [id])
  categoryId   Int
  ean          String          @default("")
  transactions Transaction[]
  order        Int
  hidden       Boolean
}

enum TransactionType {
  ProductBought
  AccountCharged
  AccountTransfer
}

model Transaction {
  id              Int             @id @default(autoincrement())
  user            User?           @relation("TransactionUser", fields: [userId], references: [id])
  userId          Int?
  creditDelta     Int
  createdAt       DateTime        @default(now())
  image           String?
  transactionType TransactionType
  // If ProductBought:
  product         Product?        @relation(fields: [productId], references: [id])
  productId       Int?
  // If AccountTransfer:
  transferUser    User?           @relation("TransactionTransferUser", fields: [transferUserId], references: [id])
  transferUserId  Int?
}
